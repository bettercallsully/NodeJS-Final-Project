section.small-receipe-area.section-padding-80-0
  .container
    .row
      // ##### Small Receipe Area End #####
      // ##### Quote Subscribe Area Start #####
      section.quote-subscribe-adds
        .container
          .row.align-items-end
            // Quote
            .col-12.col-lg-4
              .quote-area.text-center
                span &quot;
                h4
                  | Nothing is better than sharing some of the best drink recipes with my friends when we get together
                p Tracy Campbell
                .date-comments.d-flex.justify-content-between
                  .date January 04, 2018
                  .comments 2 Comments
            // Newsletter
            .col-12.col-lg-4
              .newsletter-area
                h4 Subscribe to our newsletter for all the new and exciting drink recipes your area
                // Form
                .newsletter-form.bg-img.bg-overlay(style='background-image: url();')
                  form(action='#', method='post')
                    input(type='email', name='email', placeholder='Subscribe to newsletter')
                    button.btn.delicious-btn.w-100(type='submit') Subscribe
            // Adds
            .col-12.col-lg-4
              .delicious-add
                img(src='img/core-img/brandyoldfashioned.jpg', alt='')
